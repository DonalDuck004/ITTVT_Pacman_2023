<UserControl x:Class="WorldsBuilderWPF.ComboBoxItemColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldsBuilderWPF"
             mc:Ignorable="d" Height="auto">
    <DockPanel>
        <Label Content="{Binding Path=Content, Mode=OneWay}" VerticalAlignment="Center" VerticalContentAlignment="Center"></Label>
        <Rectangle Width="32" Height="12" Margin="0,3,0,3" Grid.Column="1" Fill="{Binding Path=ColorFill, Mode=OneWay}" VerticalAlignment="Center"></Rectangle>
    </DockPanel>
</UserControl>
